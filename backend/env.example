# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here

# PostgreSQL Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ai_learning
DB_USER=postgres
DB_PASSWORD=postgres

# Redis Cache Configuration (optional - caching disabled if not configured)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# RAG System Configuration (optional - uses defaults if not set)
# Retrieval and Reranking Thresholds
RAG_MIN_SIMILARITY_THRESHOLD=0.7
RAG_RERANK_TOP_K_MULTIPLIER=3

# Context Assembly
RAG_CONTEXT_MAX_TOKENS=2000
RAG_CONTEXT_RESERVE_TOKENS=200
RAG_DEDUP_SIMILARITY_THRESHOLD=0.85

# Retrieval Parameters
RAG_DEFAULT_TOP_K=3
RAG_MAX_TOP_K=20

# Reranking Strategy Weights (for combined strategy)
RAG_KEYWORD_WEIGHT=0.35
RAG_SIMILARITY_WEIGHT=0.65

# Length Filtering
RAG_MIN_CHUNK_LENGTH=50
RAG_MAX_CHUNK_LENGTH=2000
RAG_OPTIMAL_CHUNK_MIN=100
RAG_OPTIMAL_CHUNK_MAX=500

# Diversity Reranking
RAG_MAX_CHUNKS_PER_PAGE=2
RAG_MAX_CHUNKS_PER_DOCUMENT=

# Hallucination Detection
RAG_HALLUCINATION_THRESHOLD=0.7

# Query Expansion
RAG_QUERY_EXPANSION_VARIATIONS=2

# Hybrid Search Defaults
RAG_DEFAULT_VECTOR_WEIGHT=0.7
RAG_DEFAULT_KEYWORD_WEIGHT=0.3
